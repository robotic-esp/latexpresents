                \fi%
                \iflatexpresents@videokeys@loop%
                    %%% HREF HACK %%%
                    \edef\latexpresents@video@optionstring{\latexpresents@video@optionstring\&loop}%
                    %%% HREF HACK %%%
                    %%% BEAMER MULTIMEDIA %%%
                    %\edef\latexpresents@video@optionstring{\latexpresents@video@optionstring,loop}
                %\else
                    %\edef\latexpresents@video@optionstring{\latexpresents@video@optionstring,once}
                    %%% BEAMER MULTIMEDIA %%%
                \fi%
            \fi%

