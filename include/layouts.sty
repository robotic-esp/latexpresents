        \else%
            % Debug the 1--2 gutter
            \iflatexpresents@columnlayoutkeys@debug%
                \begin{textblock*}{\latexpresents@columnlayout@gutter}(\elementposx + \elementwidth, \elementposy)%
                    \textblockcolour{GRAY!50!BACKGROUND}%
