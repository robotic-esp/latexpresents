            \addtolength{\elementposx}{\elementwidth + \latexpresents@columnlayout@gutter}% Move to the top-left of this column
            \setlength{\elementwidth}{\latexpresents@columnlayout@middlecolumnwidth}%

            % Adjust top if ragged
