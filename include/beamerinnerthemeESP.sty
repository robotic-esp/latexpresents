%%% Special pages %%%
\newlength{\espbeamer@titlepage@toprowheight}% The height of the top row
\newlength{\espbeamer@titlepage@bottomrowheight}% The height of the bottom row
\newlength{\espbeamer@titlepage@origlogowidth}% The original width of the logos
\setbeamertemplate{title page}% The title page
{%
    \settowidth{\espbeamer@titlepage@origlogowidth}{\espbeamer@titlelogos}%
    \multirowlayout[nodecorations, gutter=0pt]%
    {0.6}%
    {%
        \ifx\espbeamer@titlelogos\@empty%
        \else%
            \vfill%
            \ifdim\espbeamer@titlepage@origlogowidth>\elementwidth%
                \resizebox{\elementwidth}{!}%
                {%
                    \usebeamercolor*{titlelogo}%
                    \usebeamerfont*{titlelogo}%
                    \espbeamer@titlelogos{}%
                }%
            \else%
                \usebeamercolor*{titlelogo}%
                \usebeamerfont*{titlelogo}%
                \hfil%
                \espbeamer@titlelogos{}%
                \hfil%
            \fi%
        \fi%
        \vfill%
        \begin{minipage}[b]{\elementwidth}%
            \usebeamerfont{title}%
            \usebeamercolor{title}%
            \inserttitle%
        \end{minipage}%
    }%
    [0.4]%
    [%
        \usebeamerfont{author}%
        \usebeamercolor{author}%
        \vskip0.15\baselineskip%
        \rule{\elementwidth}{3pt}%
        \vskip0.15\baselineskip%
        \strut\insertauthor{}\\%
        \usebeamerfont{institute}%
        \usebeamercolor{institute}%
        \strut\insertinstitute{}\\%
        \usebeamerfont{date}%
        \usebeamercolor{date}%
        \strut\insertdate{}%
    ]%
}%
\setbeamertemplate{part page}% The titlepage of a presentation part
{%
    \multirowlayout[nodecorations, gutter=0pt]%
    {1.0}%
    {%
        \centering%
        \vfil%
        \usebeamerfont{part title}
        \usebeamercolor{part title}
        \insertpart{}%
        \vfil%
    }%
}%
\setbeamertemplate{section page}% The titlepage of a presentation section
{%
    \multirowlayout[nodecorations, gutter=0pt]%
    {1.0}%
    {%
        \centering%
        \vfil%
        \usebeamerfont{section title}
        \usebeamercolor{section title}
        \insertsection{}%
        \vfil%
    }%
}%
\setbeamertemplate{subsection page}% The titlepage of a presentation subsection
{%
    \multirowlayout[nodecorations, gutter=0pt]%
    {1.0}%
    {%
        \centering%
        \vfil%
        \usebeamerfont{subsection title}
        \usebeamercolor{subsection title}
        \insertsubsection{}%
        \vfil%
    }%
}%


